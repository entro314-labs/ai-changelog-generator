    "dotenv": "^17.2.1",
    "figures": "^6.1.0",
    "google-auth-library": "^10.2.1",
    "gradient-string": "^3.0.0",
    "js-yaml": "^4.1.0",
    "ollama": "^0.5.17",
    "openai": "^5.12.2",
    "ora": "^8.2.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/dxt": "^0.2.6",
    "@types/node": "24.2.1",
